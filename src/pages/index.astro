---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Paducah Porch Goose - Coming Soon" description="Paducah Porch Goose - Coming Soon">
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 flex items-center justify-center px-4">
    <div class="text-center max-w-2xl mx-auto">
      <div class="mb-8 sm:mb-12">
        <img
          src="/1000px_ppg_logo.png"
          alt="PPG Logo"
          class="w-48 h-48 sm:w-72 sm:h-72 md:w-96 md:h-96 mx-auto object-contain drop-shadow-lg"
        />
      </div>
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-gray-800 dark:text-white mb-4 sm:mb-6 tracking-tight">
        Coming Soon
      </h1>
      <p class="text-lg sm:text-xl md:text-2xl text-gray-600 dark:text-gray-300 font-light">
        Something amazing is on the way
      </p>
    </div>
  </div>
</Layout>